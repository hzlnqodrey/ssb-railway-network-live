# Swiss Railway Network Backend Environment Variables
# Copy this file to .env.local and fill in your values

# Server Configuration
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Swiss Transport API Configuration
SBB_API_BASE_URL=https://transport.opendata.ch/v1
SBB_API_KEY=your_sbb_api_key_here
SBB_API_TIMEOUT=10000

# Database Configuration (Future)
DATABASE_URL=postgresql://railway_user:railway_pass@localhost:5432/swiss_railway
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (Future)
REDIS_URL=redis://localhost:6379
REDIS_TTL_TRAINS=5000
REDIS_TTL_STATIONS=300000

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CLIENTS=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
