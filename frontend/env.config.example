# Swiss Railway Network Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_SBB_API_BASE_URL=https://transport.opendata.ch/v1
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Application Configuration
NEXT_PUBLIC_APP_NAME="Swiss Railway Network Live"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# Map Configuration
NEXT_PUBLIC_DEFAULT_MAP_CENTER_LAT=46.8182
NEXT_PUBLIC_DEFAULT_MAP_CENTER_LNG=8.2275
NEXT_PUBLIC_DEFAULT_MAP_ZOOM=8

# Cache Configuration (in milliseconds)
NEXT_PUBLIC_CACHE_TRAINS_TTL=5000
NEXT_PUBLIC_CACHE_STATIONS_TTL=300000
NEXT_PUBLIC_CACHE_TIMETABLES_TTL=30000

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,de,fr,it

# Performance
NEXT_PUBLIC_MAX_TRAINS_DISPLAYED=500
NEXT_PUBLIC_UPDATE_INTERVAL=5000
